<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <Button
        android:id="@+id/btnAddActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/black"
        android:text="SET PRICE"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="Inventory name here"
        android:textColor="#de000000"
        android:textSize="12.7sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        tools:context=".price.PriceBikeActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".price.PriceBikeActivity">

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="8dp">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayout">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutTwo">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutThree">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutFour">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutFive" />

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutSeven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutSix">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutEight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutSeven">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>

            <com.bmyraahi.vendor.views.CustomEditBoxLayout
                android:id="@+id/customFormLayoutNine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutEight">

            </com.bmyraahi.vendor.views.CustomEditBoxLayout>
            <com.bmyraahi.vendor.views.CustomTcLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customFormLayoutNine">

            </com.bmyraahi.vendor.views.CustomTcLayout>

        </android.support.constraint.ConstraintLayout>



    </ScrollView>
</android.support.constraint.ConstraintLayout>